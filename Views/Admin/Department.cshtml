@model List<BookKeeperNewJosh.DAL.Department>
    @{
        ViewBag.Title = "Department";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <h2>Department</h2>
    <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Departments</li>
        </ol>

        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Department Details
                <!-- How to ref methods in controller -->
                <a href="../../Admin/AddDept" class="btn btn-info pull-right fa fa-plus">Add New</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Department ID</th>
                                <th>Department Name</th>
                                <th>Action</th>                               
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Department ID</th>
                                <th>Department Name</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(Model.IndexOf(item) + 1)</td>
                                    <td>@item.name</td>
                                    <td><a href="#">Edit</a></td>
                                </tr>
                            }
                        </tbody>
                        </table>
                    </div>  
                </div>
            </div>
        </div>
